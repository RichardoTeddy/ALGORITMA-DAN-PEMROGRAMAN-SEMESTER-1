package tugas.variabel;

/**
 * Program sederhana menampilkan HitungKali1 .dan menghitung
 */
public class TugasVariabel {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {

        double usd = 0.000071;
        double yen = 0.0077;
        double idr = 100000;
        double konvers;                   // 100.000idr to usd
        konvers = idr * usd;
        double konvers1;                 // 100.000idr to yen
        konvers1 = idr * yen;

        System.out.println("IDR TO USD :" + konvers);
        System.out.println("IDR TO YEN : " + konvers1);
        System.out.println("Berikut merupakan konversi terhadap 2 mata uang asing ");

    }   // akhir dari main()

}   // akhir dari class HitungKali1
